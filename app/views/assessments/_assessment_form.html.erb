 <%= form_tag(submit_assess_path(@assessment_page.principal.id), method: "post", role:"form", class: "form") do %>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-1">
        <div class="page-header">
          <h2>Self and peer Assessments</h2>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-10">
              <h3>Team name:
                  <span class="text-danger"><%= @assessment_page.team_name %> </span>
              </h3>
            </div>
            <div class="col-sm-10">
              <h4>Your name: 
                  <span class="text-danger"><%= @assessment_page.principal_av.name %></span>
              </h4>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <p class="small">
              	<%= render "assessments_blurb" %>
              </p>
            </div>
          </div>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-12">
              <h4>Self Assessment</h4>
                <div class="col-sm-12">
                  <p class="small">
                  	<%= render "self_assessment_blurb" %>
                  </p>
                </div>
                <%= render partial: "assessment_dropdown", locals: { assess: @assessment_page.principal_av } %>
            </div>
          </div>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-12">
              <h4>Team Peer Assessments</h4>
                <div class="col-sm-12">
                  <p class="small">
                    <%= render "peer_assessments_blurb" %>
                  </p>
                </div>
                <% @assessment_page.peers_av.each do |peer| %>
                  <%= render partial: "assessment_dropdown", locals: { assess: peer } %>
                <% end %>
              </div>
            </div>
          </div>
        <%= submit_tag("Save", class: "btn btn-default") %>
        <%= submit_tag("Done", class: "btn btn-default") %>
        <%= submit_tag("Cancel", class: "btn btn-default") %>
      </div>
    </div>
 <% end %>
